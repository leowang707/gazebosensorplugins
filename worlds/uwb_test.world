<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="uwb_test_world">

    <!-- ☀️ 光源與地板 -->
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- UAV -->
    <include>
      <uri>model://uwb_tag_UAV</uri>
      <name>uwb_tag_UAV_100</name>
      <pose>0 0 1.0 0 0 0</pose>
    </include>

    <!-- USV -->
    <include>
      <uri>model://uwb_tag_USV</uri>
      <name>uwb_tag_USV_200</name>
      <pose>4 0 1.0 0 0 0</pose>
    </include>

    <!-- 🟧 薄牆 -->
    <model name="thin_wall">
      <pose>2 0 1.0 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.01 1 2</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.01 1 2</size></box>
          </geometry>
          <material><diffuse>1 0.6 0 1</diffuse></material>
        </visual>
      </link>
    </model>
  </world>
</sdf>
